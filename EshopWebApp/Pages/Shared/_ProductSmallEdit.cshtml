@model ServiceLayer.ProductService.ProductListDto

<div class="productSmallBar">
	<div class="row">
		<div class="col-1">
			<div>
				<div>@Model.ProductID</div>
			</div>
		</div>
		<div class="col-4">
			<div>
				<div>@Model.Name</div>
			</div>
		</div>
		<div class="col-3">
			<div>
				<div>
					@Model.BrandName
					@if (Model.Featured)
					{
						<span>&nbsp;- Featured</span>
					}
				</div>

			</div>
		</div>
		<div class="col-2">
			<div>
				<div>@Model.Price.ToString("C")</div>
			</div>
		</div>
		<div class="col-1">
			<div>
				<a class="btn btn-danger" asp-area="" asp-page="/Admin/ProductPages/DeleteProduct" asp-route-id="@Model.ProductID">
					<i class="fa fa-trash"></i>
				</a>
			</div>
		</div>
		<div class="col-1">
			<div>
				<a class="btn btn-primary" asp-area="" asp-page="/Admin/ProductPages/EditProduct" asp-route-id="@Model.ProductID">
					<i class="fa fa-edit"></i>
				</a>
			</div>
		</div>
	</div>
</div>
<hr />