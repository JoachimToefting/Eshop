@page
@model EshopWebApp.Pages.Admin.AdminPanelModel
@{
	ViewData["Title"] = "Adming panel";
}

<div class="text-center">
	<h1 class="display-4">Admin Panel</h1>
	<p>Welcome to Admin panel:</p>
	<form method="get">
		<div class="form-group">
			<div class="row">
				<div class="col-4">
					<input asp-for="searchTerm" class="form-control" placeholder="SearchText" />
					<span asp-validation-for="searchTerm" class="text-danger"></span>
				</div>
				<div class="col-4">
					<select class="form-control" asp-for="orderBy" asp-items="Html.GetEnumSelectList<ServiceLayer.ProductService.QueryObjects.OrderByOptions>()" onchange="this.form.submit()"></select>
				</div>
				<div class="col-2">
					<select asp-for="pageSize" class="form-control" onchange="this.form.submit()">
						<option value="5">5</option>
						<option value="10">10</option>
						<option value="15">15</option>
						<option value="20">20</option>
						<option value="25">25</option>
						<option value="100">100</option>
					</select>
				</div>
				<div class="col-2">
					<input type="submit" value="Search" class="btn btn-primary" />
				</div>
			</div>
		</div>
	</form>
	<div>
		<div class="row">
			<div class="col-1">
				<b>ID:</b>
			</div>
			<div class="col-4">
				<b>Name:</b>
			</div>
			<div class="col-3">
				<b>Brand:</b>
			</div>
			<div class="col-2">
				<b>Price:</b>
			</div>
		</div>
	</div>
	<hr />
	@foreach (ServiceLayer.ProductService.ProductListDto product in Model.Products)
	{
		@await Html.PartialAsync("_ProductSmallEdit", product)
	}
	<div>
		<ul class="pagination">
			@for (int i = 1; i <= Model.totalPages; i++)
			{
				<li class="page-item @(i == Model.pageCurrent ? "active" : "")">
					<a asp-page="/Admin/AdminPanel" asp-route-pagecurrent="@i" asp-route-searchterm="@Model.searchTerm" asp-route-orderby="@Model.orderBy" asp-route-pagesize="@Model.pageSize" class="page-link">@i</a>
				</li>
			}
		</ul>
	</div>

	<ul>
		<li>
			<a asp-page="./ProductPages/EditProduct">Create new Product</a>
		</li>
		<li>
			<a asp-page="./BrandPages/EditBrand">Create new Brand</a>
		</li>
	</ul>
</div>