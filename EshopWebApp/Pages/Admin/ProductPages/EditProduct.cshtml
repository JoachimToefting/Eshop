@page "{id:int?}"

@model EshopWebApp.Pages.Admin.ProductPages.EditProductModel

@{
	ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Product.Name" class="control-label"></label>
				<input asp-for="Product.Name" class="form-control" />
				<span asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Price" class="control-label"></label>
				<input asp-for="Product.Price" class="form-control" />
				<span asp-validation-for="Product.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.BrandID" class="control-label">Brand:</label>
				<select asp-for="Product.BrandID" class="form-control" asp-items="ViewBag.Brand">
					<option value="" disabled>Choose a Brand</option>
					<option value="">No Brand</option>
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Product.Description" class="control-label">Description:</label>
				<textarea asp-for="Product.Description" class="form-control textArea" placeholder="Description text"></textarea>
				<span asp-validation-for="Product.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Upload" class="control-label">Product image:</label>
				<input type="file" asp-for="Upload" />
			</div>
			<div class="form-group">
				<label asp-for="Product.Featured" class="form-check-label">Featured:</label>
				@Html.CheckBoxFor(m => m.Product.Featured, new { @class = "form-check-input" })
			</div>
			<div class="form-group">
				<input type="hidden" asp-for="Product.ProductID" />
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
	<div class="col-md-8">
		<div class="productImgPar">
			@if (!string.IsNullOrEmpty(Model.Product.ImgPath))
			{
				<img asp-append-version="true" src="~/img/@Model.Product.ProductID.@Model.Product.ImgPath" />
			}
			else
			{
				<img asp-append-version="true" src="~/img/Placeholder.png" />
			}
		</div>
	</div>
</div>

<div>
	<a asp-page="/admin/addminpanel">Back to admin Panel</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
