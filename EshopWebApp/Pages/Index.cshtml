@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="text-center">
	<h1 class="display-4">Welcome to ShopShop</h1>
	<div>
		<form method="get">
			<div class="form-group">
				<div class="row">
					<div class="col-4">
						<input asp-for="searchTerm" class="form-control" placeholder="SearchText"/>
						<span asp-validation-for="searchTerm" class="text-danger"></span>
					</div>
					<div class="col-4">
						<select class="form-control" asp-for="orderBy" asp-items="Html.GetEnumSelectList<ServiceLayer.ProductService.QueryObjects.OrderByOptions>()" onchange="this.form.submit()"></select>
					</div>
					<div class="col-4">
						<input type="submit" value="Search" class="btn btn-primary" />
					</div>
				</div>
			</div>
		</form>
	</div>
	<div class="">
		@foreach (var item in Model.Products)
		{
			@await Html.PartialAsync("_ProductItem",item)
		}
	</div>
	<div>
		<ul class="pagination">
			@for (int i = 1; i <= Model.totalPages; i++)
			{
				<li class="page-item @(i == Model.pageCurrent ? "active" : "")">
					<a asp-page="/Index" asp-route-pagecurrent="@i" asp-route-searchterm="@Model.searchTerm" asp-route-orderby="@Model.orderBy" class="page-link">@i</a>
				</li>
			}
		</ul>
	</div>
</div>
